# ==============================================
# TIRE SERVICE API - ENVIRONMENT VARIABLES
# ==============================================

# ==============================================
# RAILS SETTINGS
# ==============================================
RAILS_ENV=development
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_LEVEL=debug

# ==============================================
# DATABASE SETTINGS
# ==============================================
DATABASE_URL=postgresql://tire_service_user:tire_service_password@localhost:5432/tire_service_development
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tire_service_development
DB_USER=tire_service_user
DB_PASSWORD=tire_service_password

# ==============================================
# REDIS SETTINGS
# ==============================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# ==============================================
# SECURITY SETTINGS
# ==============================================
# ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ В PRODUCTION!
SECRET_KEY_BASE=development_secret_key_base_change_in_production
JWT_SECRET=development_jwt_secret_change_in_production

# ==============================================
# CORS SETTINGS
# ==============================================
ALLOWED_ORIGINS=http://localhost:3008,http://127.0.0.1:3008,http://192.168.3.145:3008

# ==============================================
# EMAIL SETTINGS (для уведомлений)
